<a:application xmlns:a="http://ajax.org/2005/aml">
    <div class="task-tab">
        <a:bar id="header" class="header">
            <a:bar class="logo">
                <img id="logo" src="#"/>
            </a:bar>
            <a:bar class="taskName">
                <h3 id="taskName"></h3>
            </a:bar>
        </a:bar>
        <a:bar id="navigation" class="bar-task">
            <a:button id="btnDescription" class="bar-task--btn active">Description</a:button>
            <a:button id="btnStatistic" class="bar-task--btn">Statistic</a:button>
            <a:button id="btnCalendar" class="bar-task--btn">Calendar</a:button>
        </a:bar>
        <a:bar id="content" class="tab-container">
            <a:bar id="barDescription" class="bar-content active">
            </a:bar>
            <a:bar id="barStatistic" class="bar-content">
            </a:bar>
        </a:bar>
        <a:bar class="add-tab">
            <a:button id="upload">Upload and tesk</a:button>
            <img id="deadlineIcon" src="#"/>
            <div>
                <a:label id="deadlineDate" class="deadline">
                </a:label>
                <a:label id="deadlineTime" class="deadline">
                </a:label>
            </div>
        </a:bar>
    </div>
</a:application>