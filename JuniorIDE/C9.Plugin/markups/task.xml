<a:application xmlns:a="http://ajax.org/2005/aml">
    <a:bar id="loading" class="loading-bar"></a:bar>
    <a:bar id="taskTab" class="task-tab">
        <div class="header">
            <div class="logo"></div>
            <div class="taskName">
                <h2 id="taskName"></h2>
            </div>
            <div class="sub-actions">
                <a:button id="refreshTasks" class="btn-glyph refresh-task"></a:button>
            </div>
        </div>
        <a:bar id="navigation" class="bar-task">
            <a:button id="btnDescription" class="btn-menu active">Description</a:button>
            <a:button id="btnStatistic" class="btn-menu">Statistic</a:button>
        </a:bar>
        <a:bar id="content" class="subtab">
            <a:bar id="barDescription" class="content"></a:bar>
            <a:bar id="barStatistic" class="content"></a:bar>
        </a:bar>
        <a:bar id="markContainer" class="mark-container">
            <p>Your mark is</p>
            <a:label id="mark" class="mark"></a:label>
        </a:bar>
        <div class="actions">
            <div>
                <div class="deadline-icon"></div>
                <a:label id="deadlineDate" class="deadline"></a:label>
                <a:label id="deadlineTime" class="deadline"></a:label>
            </div>
            <a:button id="upload" class="btn-custom">Upload and test</a:button>
        </div>
    </a:bar>
</a:application>